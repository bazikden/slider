.slider-container 
    margin: 20px    auto;
    max-width: 90%;
    display: flex;


    .image-container 
        display: flex;
        overflow: hidden;
        margin: 0 auto;
        position: relative;

        .prev,.next
            position absolute
            z-index 2
            width 50px
            height 50px
            background transparent

        .next
            transform rotate( 180deg)

        .image-wrapper
            display: flex;
            position: relative;


        img 
            box-sizing: border-box;
            position: relative;
