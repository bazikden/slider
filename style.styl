@import "./slider.styl"

.container
    max-width 1024px
    margin 0 auto
    .search
        display flex
        position relative
        height 30px
        &-input
            padding 0 0 0 10px
            margin 0
            display block
            box-sizing border-box
            border 2px solid black
            width 100%
            height 100%
            outline none
        .inputerror
            border 2px solid red
            color red
            display block
        &-btn
            width 30px
            height 100%
            position absolute
            border 2px solid black
            box-sizing border-box
            b
            z-index 1
            background url("./images/search.jpg") center top
            background-size contain
            right 0

    .error
        color red
        padding 5px 0  10px 20px
        display none